<UserControl x:Class="EasyLearn.UI.CustomControls.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyLearn.UI.CustomControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converters="clr-namespace:EasyLearn.Infrastructure.ValueConverters"
             mc:Ignorable="d">

    <materialDesign:Flipper Style="{DynamicResource MaterialDesignCardFlipper}" 
                            materialDesign:ShadowAssist.ShadowDepth="Depth2"
                            Margin="17 10 0 0"
                            IsFlipped="{Binding IsCardFlipped, Mode=TwoWay}">

        <!--Лицевая сторона карточки-->
        <materialDesign:Flipper.FrontContent>
            <Grid Height="256" Width="200">

                <Grid.RowDefinitions>
                    <RowDefinition Height="160" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--Пространство с картинкой и закрашенным фоном-->
                <materialDesign:ColorZone Mode="PrimaryLight" VerticalAlignment="Stretch">

                    <materialDesign:PackIcon Kind="AccountCircle" 
                                             Height="128" 
                                             Width="128"
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" />

                </materialDesign:ColorZone>

                <!--Кнопка перехода на заднюю сторону карточки (настройки аккаунта)-->
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Foreground="Black"
                        Width="30"
                        Height="30"
                        Padding="1"
                        Margin="0 6 6 0"
                        ToolTip="Настройки аккаунта">

                    <materialDesign:PackIcon Kind="AccountDetails" 
                                             Width="22" 
                                             Height="22"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding FlipBackAllAnotherCardsCommand}"/>
                            <i:InvokeCommandAction Command="{Binding SetEditNameFieldValueCommand}"/>
                            <i:InvokeCommandAction Command="{x:Static materialDesign:Flipper.FlipCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                </Button>

                <!--Пространство под картинкой аккаунта-->
                <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Имя пользователя-->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Grid.Row="0">
                        <TextBlock Text="{Binding Name}" FontSize="13"/>
                    </StackPanel>

                    <!--Кнопка авторизации на аккаунте-->
                    <Button Style="{DynamicResource MaterialDesignFlatButton}"                            
                            Foreground="Black"
                            HorizontalAlignment="Center"
                            Content="Войти"
                            Visibility="{Binding IsCurrent, Converter={converters:ReverseVisibilityConverter}}"
                            Grid.Row="1"
                            Margin="0 3 0 0"
                            ToolTip="Войти на аккаунт"
                            Command="{Binding SetUserAsCurrentCommand}"/>

                    <!--Надпись "текущий аккаунт"-->
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Visibility="{Binding IsCurrent, Converter={converters:ForwardVisibilityConverter}}"
                                HorizontalAlignment="Center"
                                Margin="0 3 0 0">

                        <TextBlock Text="Текущий аккаунт"                             
                               FontSize="15"
                               Margin="0 5 0 0"
                               FontWeight="Bold"
                               Foreground="ForestGreen"/>

                        <materialDesign:PackIcon Kind="CheckCircle" 
                                                 Width="14" Height="14"
                                                 Margin="4 0 0 0"
                                                 Foreground="ForestGreen"
                                                 VerticalAlignment="Center"/>

                    </StackPanel >


                </Grid>

            </Grid>
        </materialDesign:Flipper.FrontContent>

        <!--Задняя сторона карточки-->
        <materialDesign:Flipper.BackContent>
            <Grid Height="256" Width="200">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--Шапка-->
                <materialDesign:ColorZone Mode="PrimaryMid" Padding="6">

                    <StackPanel Orientation="Horizontal">

                        <!--Кнопка возвращающая на лицевую сторону карточки-->
                        <Button Style="{DynamicResource MaterialDesignToolForegroundButton}"
                                HorizontalAlignment="Left"
                                IsEnabled="{Binding BackButtonIsEnabled}">

                            <materialDesign:PackIcon Kind="ArrowLeft" HorizontalAlignment="Right" />

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{x:Static materialDesign:Flipper.FlipCommand}"/>
                                    <i:InvokeCommandAction Command="{Binding EditUserCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                        </Button>

                        <TextBlock Margin="8 0 0 0" 
                                   VerticalAlignment="Center"
                                   Text="Настройки аккаунта"/>

                    </StackPanel>
                </materialDesign:ColorZone>

                <TextBox materialDesign:HintAssist.Hint="Имя пользователя" 
                         materialDesign:HintAssist.IsFloating="True"
                         Grid.Row="1"
                         Margin="0 12 0 0"
                         Width="172"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top">

                    <TextBox.Text>
                        <Binding Path="EditNameFieldValue" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                            <Binding.ValidationRules>
                                <!--<local:NotEmptyValidationRuleForRenameAccountWindow ValidatesOnTargetUpdated="True" />
                                    <local:MaxSymbolValidationRuleForRenameAccountWindow ValidatesOnTargetUpdated="True"/>-->
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding UpdateGoBackButtonIsEnabledCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>


                </TextBox>


                <!--Кнопка удаления аккаунта-->
                <Button Grid.Row="2" 
                        Margin="30 12 30 12" 
                        Command="{Binding RemoveUserCommand}"
                        Foreground="Red"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        ToolTip="Удалить аккаунт"
                        VerticalAlignment="Bottom">

                    <StackPanel Orientation="Horizontal">

                        <TextBlock Text="Удалить" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <materialDesign:PackIcon Kind="Trash" Height="18" Width="18" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                    </StackPanel>

                </Button>

            </Grid>
        </materialDesign:Flipper.BackContent>

    </materialDesign:Flipper>
</UserControl>
