            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0 0 0 50"
                        Grid.Row="2">

                <!--Текстбокс, в который нужно записывать перевод слова для проверки-->
                <TextBox Grid.Row="2" 
                     Name="dictationTextBox"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Height="50"
                         KeyDown="dictationTextBox_KeyDown"
                     Text="{Binding AnswerValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="300"
                     Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Перевод"                
                     FontSize="16"/>

                <!--Кнопка "проверить"-->
                <Button Grid.Row="1" 
                        Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                        Command="{Binding CheckAnswerCommand}"
                        ToolTip="Проверить слово"
                        Visibility="{Binding IsCheckWordButtonVisible, Converter={converters:ReverseCollapseConverter}}">

                    <materialDesign:PackIcon Kind="Eye"
                                         Height="25"
                                         Width="25"/>
                </Button>

                <!--Кнопка "двигаться дальше"-->
                <Button Grid.Row="1" 
                        Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                        Command="{Binding TryGoNextCommand}"
                        ToolTip="Проверить слово и двигаться дальше"
                        Visibility="{Binding IsNextWordButtonVisible, Converter={converters:ReverseCollapseConverter}}">

                    <materialDesign:PackIcon Kind="ArrowRightBold"
                                         Height="25"
                                         Width="25"/>
                </Button>

            </StackPanel>



            <!--Иконка правильного ответа-->
            <materialDesign:PackIcon Kind="Check" 
                                     Height="60" 
                                     Width="60" 
                                     Foreground="Green"
                                     Grid.Row="1"
                                     HorizontalAlignment="Center"
                                     Visibility="{Binding CorrectAnswerIconIsVisible, Converter={converters:ForwardVisibilityConverter}}"/>

            <!--Иконка неправильного ответа-->
            <materialDesign:PackIcon Kind="Close" 
                                     Height="60" 
                                     Width="60" 
                                     Foreground="Red"
                                     Grid.Row="1"
                                     HorizontalAlignment="Center"
                                     Visibility="{Binding WrongAnswerIconIsVisible, Converter={converters:ForwardVisibilityConverter}}"/>

            <!--Прогресс текущего диктанта-->
            <ProgressBar Grid.Row="1" 
                         VerticalAlignment="Bottom" 
                         Height="7"
                         Value="{Binding ProgressBarCurrentValue}"
                         Maximum="{Binding ProgressBarMaxValue}"/>

            <!--Кнопка "начать диктант"-->
            <Button Grid.Row="2"
                    Height="40" 
                    Width="130" 
                    Margin="0 70 0 0"
                    FontSize="18"
                    ToolTip="Начать дикнтант"
                    Content="Начать"
                    IsEnabled="{Binding IsStartButtonEnabled}"
                    Visibility="{Binding IsStartButtonVisible, Converter={converters:ForwardVisibilityConverter}}"
                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">

                <Button.CommandParameter>
                    <StackPanel Margin="10">
                        <Slider Grid.Row="1"
                                Minimum="{Binding SliderMinValue}" 
                                Maximum="{Binding SliderMaxValue}" 
                                Style="{DynamicResource MaterialDesignDiscreteSlider}" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                ToolTip="Задать кол-во слов в диктанте"
                                Value="{Binding SliderCurrentValue, Mode=TwoWay}"
                                Width="360"
                                Margin="5 0"/>
                        <ComboBox Grid.Row="0" 
                                  materialDesign:HintAssist.Hint="Словарь" 
                                  materialDesign:HintAssist.IsFloating="True"
                                  MaxDropDownHeight="200"
                                  Margin="10"
                                  ItemsSource="{Binding DictionaryComboBoxItems}"
                                  SelectedItem="{Binding SelectedDictionaryComboBoxItem}">

                        </ComboBox>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">

                            <!--Кнопка отмены старта диктанта-->
                            <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                                    Content="Отмена"
                                    Margin="6">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                            </Button>

                            <!--Кнопка подтверждения старта диктанта-->
                            <Button Style="{DynamicResource MaterialDesignFlatButton}"  
                                    HorizontalAlignment="Center"
                                    Content="Начать"
                                    Margin="10">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                                        <i:InvokeCommandAction Command="{Binding StartDictationCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                            </Button>

                        </StackPanel>
                    </StackPanel>
                </Button.CommandParameter>
            </Button>

            <!--Кнопка "завершить диктант"-->
            <Button Grid.Row="2"
                    Height="40" 
                    Name="endButton"
                    Width="130"                   
                    Margin="0 70 0 0"
                    FontSize="18"
                    Content="Завершить"
                    ToolTip="Завершить диктант"
                    Visibility="{Binding IsEndButtonVisible, Converter={converters:ForwardVisibilityConverter}}">


                <!--View окошка результата диктанта-->

                <Button.CommandParameter>
                    <StackPanel Margin="10">


