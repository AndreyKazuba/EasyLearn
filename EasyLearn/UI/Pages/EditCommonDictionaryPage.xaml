<Page x:Class="EasyLearn.UI.Pages.EditCommonDictionaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="GhostWhite">
    <materialDesign:DialogHost>
        <Grid>

            <Grid.RowDefinitions>
                <!--Место для панели с "инструментами"-->
                <RowDefinition Height="0.15*"/>
                <!--Место для контейнера всех CommonRelation-->
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Верхняя панель с "инструментами"-->
            <DockPanel>

                <!--Кнопка "назад"-->
                <Button Command="{Binding GoBackCommand}"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Margin="5 0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowBack" Height="18" Width="18" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock Text="Назад" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!--Кнопка добавления нового CommonRelation-->
                <Button VerticalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        Foreground="ForestGreen"
                        Content="Добавить"
                        DockPanel.Dock="Left"
                        Margin="5 0">

                    <!--Диалоговое окно добавления нового CommonRelation-->
                    <Button.CommandParameter>
                        <Grid Margin="10">

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!--Текстбокс для введения английского значения в новом CommonRelation-->
                            <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                     Width="200" 
                                     Grid.Column="0"
                                     Grid.Row="0"
                                     Margin="10"
                                     materialDesign:HintAssist.Hint="Русский перевод"
                                     Text="{Binding AddingWindowRussianValue, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>

                            <!--Комбобокс для выбора типа RussianUnit в новом CommonRelation-->
                            <ComboBox materialDesign:HintAssist.Hint="Тип русского перевода" 
                                      materialDesign:HintAssist.IsFloating="True"
                                      MaxDropDownHeight="200"
                                      Margin="10"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      ItemsSource="{Binding AddingWindowRussianUnitTypes}"
                                      SelectedItem="{Binding AddingWindowSelectedRussianUnitType, Mode=TwoWay}">
                            </ComboBox>

                            <!--Текстбокс для введения английского значения в новом CommonRelation-->
                            <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                     Width="200" 
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     Margin="10"
                                     materialDesign:HintAssist.Hint="Английский перевод"
                                     Text="{Binding AddingWindowEnglishValue, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>

                            <!--Комбобокс для выбора типа EnglishUnit в новом CommonRelation-->
                            <ComboBox materialDesign:HintAssist.Hint="Тип английского перевода" 
                                      materialDesign:HintAssist.IsFloating="True"
                                      MaxDropDownHeight="200"
                                      Margin="10"
                                      Grid.Row="1"
                                      Grid.Column="1"
                                      ItemsSource="{Binding AddingWidnowEnglishUnitTypes}"
                                      SelectedItem="{Binding AddingWindowSelectedEnglishUnitType, Mode=TwoWay}">
                            </ComboBox>

                            <!--Текстбокс для введения комментария к новому CommonRelation-->
                            <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                     Width="200" 
                                     Grid.Row="2"
                                     Grid.Column="0"
                                     Grid.ColumnSpan="2"
                                     Margin="10"
                                     materialDesign:HintAssist.Hint="Комментарий"
                                     Text="{Binding AddingWindowCommentValue, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>

                            <!--Кнопки отмены и подтверждения добавления нового CommonRelation-->
                            <Grid Margin="0 10 0 0"
                                  Grid.Row="3"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!--Кнопка отмены добавления нового CommonRelation-->
                                <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                                        Content="Отмена"
                                        Margin="6">

                                    <!--Действия кнопки при её нажатии-->
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                                            <i:InvokeCommandAction Command="{Binding ClearAddingWindowCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>

                                </Button>

                                <!--Кнопка подтверждения добавления нового CommonRalation-->
                                <Button Style="{DynamicResource MaterialDesignFlatButton}"  
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Content="Добавить"
                                        Margin="10"
                                        Grid.Column="1"
                                        IsEnabled="{Binding ConfirmNewUserButtonIsEnabled}">

                                    <!--Действия кнопки при её нажатии-->
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                                            <i:InvokeCommandAction Command="{Binding CreateCommonRelationCommand}"/>
                                            <i:InvokeCommandAction Command="{Binding ClearAddingWindowCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>

                                </Button>

                            </Grid>

                        </Grid>

                    </Button.CommandParameter>

                </Button>

                <!--Кнопка "удалить все CommonRelations"-->
                <Button VerticalAlignment="Center" 
                        Command="{Binding ClearCommonDictionaryCommand}"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        Content="Очистить"
                        DockPanel.Dock="Right"
                        Foreground="Red"
                        Margin="5 0"/>

                <!--Поисковая строка-->
                <materialDesign:ColorZone Mode="Standard"
                                          Height="40"
                                          CornerRadius="6"
                                          materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                          Margin="2"
                                          VerticalAlignment="Center"
                                          Width="260">
                    <DockPanel LastChildFill="True">
                        <Button Style="{StaticResource MaterialDesignToolForegroundButton}"
                                Margin="8 -6 8 -6"
                                DockPanel.Dock="Right"
                                Content="{materialDesign:PackIcon Kind=Search}"/>
                        <TextBox FontSize="15"
                                 Margin="8 0 0 0"
                                 VerticalAlignment="Center"
                                 materialDesign:HintAssist.Hint="Search"/>
                    </DockPanel>
                </materialDesign:ColorZone>

            </DockPanel>

            <!--Контейнер для содержания всех CommonRelations-->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding CommonRelationViews}" 
                  VerticalContentAlignment="Top"
                  HorizontalContentAlignment="Left">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

        </Grid>
    </materialDesign:DialogHost>
</Page>
