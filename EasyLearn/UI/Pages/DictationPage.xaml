                        </Button>

                    </StackPanel>
                </Button.CommandParameter>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding EndDictationCommand}"/>
                        <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </Button>

            <!--Всплывающая подсказка-->
            <materialDesign:Snackbar x:Name="promtSnackBar"
                                     VerticalAlignment="Top"
                                     IsActive="{Binding PromtIsActive}">
                <materialDesign:SnackbarMessage Content="{Binding CurrentPromtText}" HorizontalAlignment="Center"/>
            </materialDesign:Snackbar>

