<Page x:Class="EasyLearn.UI.Pages.DictationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasyLearn.UI.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:converters="clr-namespace:EasyLearn.Infrastructure.ValueConverters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DictationPage">

    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 40 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                       FontSize="90"
                       Text="{Binding DisplayValue}"
                       Style="{DynamicResource MaterialDesignHeadline1TextBlock}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0 0 0 10"/>
                    <materialDesign:Chip Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Icon="T" Content="{Binding CurrentUnitType}"/>
                </Grid>
                
                <TextBlock
                       FontSize="50"
                       Text="{Binding DisplayCommentValue}"
                       Style="{DynamicResource MaterialDesignHeadline1TextBlock}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                    Foreground="Gray"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0 0 0 50"
                        Grid.Row="2">

                <!--Текстбокс, в который нужно записывать перевод слова для проверки-->
                <TextBox Grid.Row="2" 
                     Name="dictationTextBox"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Height="50"
                         KeyDown="dictationTextBox_KeyDown"
                     Text="{Binding AnswerValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="300"
                     Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Перевод"                
                     FontSize="16"/>

                <!--Кнопка "проверить"-->
                <Button Grid.Row="1" 
                        Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                        Command="{Binding CheckAnswerCommand}"
                        ToolTip="Проверить слово"
                        Visibility="{Binding IsCheckWordButtonVisible, Converter={converters:ReverseCollapseConverter}}">

                    <materialDesign:PackIcon Kind="Eye"
                                             Height="25"
                                             Width="25"/>
                </Button>

                <!--Кнопка "двигаться дальше"-->
                <Button Grid.Row="1" 
                        Style="{DynamicResource MaterialDesignFloatingActionMiniButton}"
                        Command="{Binding TryGoNextCommand}"
                        ToolTip="Проверить слово и двигаться дальше"
                        Visibility="{Binding IsNextWordButtonVisible, Converter={converters:ReverseCollapseConverter}}">

                    <materialDesign:PackIcon Kind="ArrowRightBold"
                                             Height="25"
                                             Width="25"/>
                </Button>

            </StackPanel>

            <!--Иконка правильного ответа-->
            <materialDesign:PackIcon Kind="Check" 
                                     Height="60" 
                                     Width="60" 
                                     Foreground="Green"
                                     Grid.Row="1"
                                     HorizontalAlignment="Center"
                                     Visibility="{Binding CorrectAnswerIconIsVisible, Converter={converters:ForwardVisibilityConverter}}"/>

            <!--Иконка неправильного ответа-->
            <materialDesign:PackIcon Kind="Close" 
                                     Height="60" 
                                     Width="60" 
                                     Foreground="Red"
                                     Grid.Row="1"
                                     HorizontalAlignment="Center"
                                     Visibility="{Binding WrongAnswerIconIsVisible, Converter={converters:ForwardVisibilityConverter}}"/>

            <!--Прогресс текущего диктанта-->
            <ProgressBar Grid.Row="1" 
                         VerticalAlignment="Bottom" 
                         Height="7"
                         Value="{Binding ProgressBarCurrentValue}"
                         Maximum="{Binding ProgressBarMaxValue}"/>

            <!--Кнопка "начать диктант"-->
            <Button Grid.Row="2"
                    Height="40" 
                    Width="130" 
                    Margin="0 70 0 0"
                    FontSize="18"
                    ToolTip="Начать дикнтант"
                    Content="Начать"
                    IsEnabled="{Binding IsStartButtonEnabled}"
                    Visibility="{Binding IsStartButtonVisible, Converter={converters:ForwardVisibilityConverter}}"
                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">

                <Button.CommandParameter>
                    <StackPanel Margin="10">
                        <Slider Grid.Row="1"
                                Minimum="{Binding SliderMinValue}" 
                                Maximum="{Binding SliderMaxValue}" 
                                Style="{DynamicResource MaterialDesignDiscreteSlider}" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                ToolTip="Задать кол-во слов в диктанте"
                                Value="{Binding SliderCurrentValue, Mode=TwoWay}"
                                Width="360"
                                Margin="5 0"/>
                        <ComboBox Grid.Row="0" 
                                  materialDesign:HintAssist.Hint="Словарь" 
                                  materialDesign:HintAssist.IsFloating="True"
                                  MaxDropDownHeight="200"
                                  Margin="10"
                                  ItemsSource="{Binding DictionaryComboBoxItems}"
                                  SelectedItem="{Binding SelectedDictionaryComboBoxItem}">

                        </ComboBox>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">

                            <!--Кнопка отмены старта диктанта-->
                            <Button Style="{DynamicResource MaterialDesignFlatButton}" 
                                    Content="Отмена"
                                    Margin="6">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>

                            <!--Кнопка подтверждения старта диктанта-->
                            <Button Style="{DynamicResource MaterialDesignFlatButton}"  
                                    HorizontalAlignment="Center"
                                    Content="Начать"
                                    Margin="10">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                                        <i:InvokeCommandAction Command="{Binding StartDictationCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Button.CommandParameter>
            </Button>

            <!--Кнопка "завершить диктант"-->
            <Button Grid.Row="2"
                    Height="40" 
                    Name="endButton"
                    Width="130"                   
                    Margin="0 70 0 0"
                    FontSize="18"
                    Content="Завершить"
                    ToolTip="Завершить диктант"
                    Visibility="{Binding IsEndButtonVisible, Converter={converters:ForwardVisibilityConverter}}">


                <!--View окошка результата диктанта-->
                <Button.CommandParameter>
                    <StackPanel Margin="10">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"  
                                HorizontalAlignment="Center"
                                Content="Понятно"
                                Margin="0 6 0 10"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                FocusVisualStyle="{x:Null}">
                        </Button>
                    </StackPanel>
                </Button.CommandParameter>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding EndDictationCommand}"/>
                        <i:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>

            <!--Всплывающая подсказка-->
            <materialDesign:Snackbar x:Name="promtSnackBar"
                                     VerticalAlignment="Top"
                                     IsActive="{Binding PromtIsActive}">
                <materialDesign:SnackbarMessage Content="{Binding CurrentPromtText}" HorizontalAlignment="Center"/>
            </materialDesign:Snackbar>
        </Grid>
    </materialDesign:DialogHost>
</Page>
